{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "pinDigests": "true",
      "groupName": "docker"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "/alpine/"
      ],
      "pinDigests": "true",
      "groupName": "docker",
      "matchCurrentVersion": "latest",
      "replacementNameTemplate": "{{{packageName}}}",
      "replacementVersion": "3.18",
      "description": "Replace alpine:latest with alpine:3.18@digest"
    }
  ]
}
