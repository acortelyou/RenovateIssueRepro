{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "extends": [
    "config:best-practices"
  ],
  "pinDigests": true,
  "groupName": "renovate",  
  "packageRules": [
    {
      "matchDatasources": [
          "docker"
      ],
      "matchPackageNames": [
        "alpine"
      ],
      "matchCurrentVersion": [
        "edge"
      ],
      "replacementNameTemplate": "{{{packageName}}}",
      "replacementVersion": "latest"
    }
  ]
}
